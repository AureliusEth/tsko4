generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Vote {
  id        Int      @id @default(autoincrement())
  fightId   Int
  fighter   String
  voterId   String
  ipAddress String
  createdAt DateTime @default(now())

  @@unique([fightId, voterId])
  @@unique([fightId, ipAddress])
}
